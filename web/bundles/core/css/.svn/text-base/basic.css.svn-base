/* ------------------------------------------------------------------------ */
/* BASIC STYLES INCLUDED IN ALL MAIN PAGES OF PLACEGUIDES APPLICATION       */
/* ------------------------------------------------------------------------ */
* {
	-moz-box-sizing:border-box;
	-webkit-box-sizing:border-box;
	box-sizing:border-box;
	font-family:'Helvetica Neue', Helvetica, Arial, sans-serif;
	font-size:16px;
	font-weight:700;
	margin:0;
}

ul{
	padding:0;
}

:focus {outline: 0;}

html,body {
	overflow-x:hidden;
}

a{
	color:#fff;
	text-decoration:none
}

#mainSubject{
	width:auto;
	height:auto;
	
}